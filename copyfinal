function move(i) {
   console.log(i);
    var elem = document.getElementById("myBar"+i);
    var width = 1;
    var id = setInterval(frame, 10);
    function frame() {
      if (width >= 100) {
        clearInterval(id);
        $("#complete"+i).show();
       // $('#file'). val('');
       // i='';
      } else {
        width++;
        elem.style.width = width + "%";
       // i='';
       
      }
    }
  }

